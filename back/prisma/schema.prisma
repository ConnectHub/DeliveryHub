generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  DELIVERED
  CANCELED
}

model order {
  id              String   @id @unique @default(uuid())
  url             String   @unique @default(cuid())
  code            String   @unique @default(cuid())
  status          Status   @default(PENDING)
  sender          String
  image           String?
  doormanId       String
  addresseeId     String
  receiptDateHour DateTime @default(now())
  deletedAt       DateTime @default(now())
  addressee       resident @relation(fields: [addresseeId], references: [id])
  doorman         doorman  @relation(fields: [doormanId], references: [id])

  @@index([addresseeId, doormanId])
  @@map("Order")
}

model resident {
  id                String   @id @unique @default(uuid())
  name              String
  buildingApartment String   @unique
  phoneNumber       String
  email             String   @unique
  createdAt         DateTime @default(now())
  deletedAt         DateTime @default(now())
  orders            order[]

  @@index([name, buildingApartment])
  @@map("Resident")
}

model doorman {
  id        String   @id @unique @default(uuid())
  name      String
  createdAt DateTime @default(now())
  deletedAt DateTime @default(now())
  orders    order[]

  @@index([name])
  @@map("Doorman")
}
